<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/combinationButton"
        android:layout_width="217dp"
        android:layout_height="58dp"
        android:layout_marginTop="60dp"
        android:text="Combinaciones"
        app:layout_constraintEnd_toStartOf="@+id/combinationIV"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/picesButton"
        android:layout_width="217dp"
        android:layout_height="58dp"
        android:layout_marginTop="60dp"
        android:text="Piezas"
        app:layout_constraintEnd_toStartOf="@+id/picesIV"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/combinationButton" />

    <Button
        android:id="@+id/aboutUsButton"
        android:layout_width="217dp"
        android:layout_height="58dp"
        android:layout_marginTop="64dp"
        android:text="About Us"
        app:layout_constraintEnd_toStartOf="@+id/aboutUsIV"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/itemsButton"
        android:onClick="openAboutUs"/>

    <Button
        android:id="@+id/itemsButton"
        android:layout_width="217dp"
        android:layout_height="58dp"
        android:layout_marginTop="60dp"
        android:text="Items"
        app:layout_constraintEnd_toStartOf="@+id/itemsIV"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/picesButton" />

    <ImageView
        android:id="@+id/combinationIV"
        android:layout_width="94dp"
        android:layout_height="85dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/btn_star" />

    <ImageView
        android:id="@+id/picesIV"
        android:layout_width="94dp"
        android:layout_height="85dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/combinationIV"
        app:srcCompat="@android:drawable/btn_star" />

    <ImageView
        android:id="@+id/aboutUsIV"
        android:layout_width="94dp"
        android:layout_height="85dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/itemsIV"
        app:srcCompat="@android:drawable/btn_star" />

    <ImageView
        android:id="@+id/itemsIV"
        android:layout_width="94dp"
        android:layout_height="85dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/picesIV"
        app:srcCompat="@android:drawable/btn_star" />
</androidx.constraintlayout.widget.ConstraintLayout>